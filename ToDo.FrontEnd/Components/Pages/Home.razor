@page "/"
@rendermode InteractiveServer

@using Models
@using ToDo.FrontEnd.Components.Layout

<PageTitle>Todo List</PageTitle>

<a href="">Create a to do</a>



<div class="todo_list px-4">
  @foreach (var todo in toDos)
  {
    <ToDoView 
      todo="@todo"
      OnDelete="@DeleteToDo"
    />
  }
</div>

@code {
  private List<ToDo> toDos =
  [
  new() {
      Id = 1,
      Title = "Clean the dishes",
      Description = "The sink is way too full...",
      Complete = false
    },
    new() {
      Id = 2,
      Title = "Make bed",
      Description = "It's messy",
      Complete = true
    },
    new() {
      Id = 3,
      Title = "Finish work",
      Complete = false
    }
  ];

  private void DeleteToDo(ToDo todoToDelete) {
    toDos.Remove(todoToDelete);
  }
}